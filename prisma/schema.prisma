generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id      String   @id @default(cuid())
  email   String   @unique
  name    String?
  phone   String?
  role    String?
  bets    Bet[]
}

model Bet {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  week      Int
  game      String
  choice    String
  createdAt DateTime @default(now())
}
